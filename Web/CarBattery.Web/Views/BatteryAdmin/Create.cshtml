@model CarBattery.Web.ViewModels.Battery.CreateBatteryInputModel
@{ 
    this.ViewData["Title"] = "Add new battery and again new battery !";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
    var brandItems = this.Model.BrandsItems.Select(x => new SelectListItem(x.Value, x.Key));
    var capacityItems = this.Model.CapacityItems.Select(x => new SelectListItem(x.Value, x.Key));
}


<form method="post" class="col-md-6 offset-md-1">
    <h1>@this.ViewData["Title"]</h1> 
    <div asp-validation-summary="All"></div>
    <div class=" form-group">
        <label asp-for="BrandId"></label>
        <select asp-for="BrandId" class="form-control" asp-items="brandItems"></select>        
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="CapacityId"></label>
        <select asp-for="CapacityId" class="form-control" asp-items="capacityItems"></select>
        <span asp-validation-for="CapacityId" class="text-danger"></span>
    </div>  
    <div class=" form-group">
        <label asp-for="AmperageId"></label>
        <input asp-for="AmperageId" class="form-control" />
        <span asp-validation-for="AmperageId" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="TechnologyId"></label>
        <input asp-for="TechnologyId" class="form-control" />
        <span asp-validation-for="TechnologyId" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="BatteryDescription"></label>
        <textarea asp-for="BatteryDescription" class="form-control" rows="5"></textarea>
        <span asp-validation-for="BatteryDescription" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />

</form>