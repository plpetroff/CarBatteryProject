@using CarBattery.Common
@model CarBattery.Web.ViewModels.Home.IndexViewModel   
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>

    <div class="col-md-4 offset-md-4">
        <p>We have:</p>
            <ul class="list-group">
                <li class=" list-group-item-info">Batteries: @Model.BatteryCount</li>
                <li class=" list-group-item-danger">Categories: @Model.CategoriesCount</li>
                <li class=" list-group-item-success">Brands: @Model.BrandsCount</li>
                <li class=" list-group-item-primary">Images: @Model.ImagesCount</li>
            </ul>

    </div>
</div>
